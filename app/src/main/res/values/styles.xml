<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChipLightTextAppearance">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="DetailsText">
        <item name="android:textColor">@color/secondary_light_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FilterTitle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="FilterSwitch">
        <item name="selectedColor">@color/material_drawer_background</item>
        <item name="selectedTab">0</item>
        <item name="strokeRadius">5dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="textSize">16sp</item>
        <item name="allowMultiTab">true</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="FilterButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAppearance">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="rippleColor">@color/darkGray</item>
        <item name="strokeColor">@color/dark_icon_tint</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="PickerTitle">
        <item name="android:textColor">@color/secondary_light_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="PickerChipgroup">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="chipSpacingHorizontal">8dp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.Chip.MyChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipEndPadding">@dimen/chip_horizontal_padding</item>
        <item name="chipStartPadding">@dimen/chip_horizontal_padding</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:checkable">true</item>
        <item name="closeIconVisible">false</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Base.Base.Widget.MaterialComponents.Chip.MyChip.Dark" parent="Base.Widget.MaterialComponents.Chip.MyChip">
        <item name="chipBackgroundColor">@color/chip_dark_background</item>
        <item name="rippleColor">@color/primary_dark</item>
    </style>

    <style name="Base.Base.Widget.MaterialComponents.Chip.MyChip.Light" parent="Base.Widget.MaterialComponents.Chip.MyChip">
        <item name="chipBackgroundColor">@color/chip_light_background</item>
        <item name="rippleColor">@color/darkGray</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipSurfaceColor">@color/primary</item>
        <item name="chipStrokeColor">@color/material_drawer_background</item>
        <item name="android:textAppearance">@style/ChipLightTextAppearance</item>
        <item name="chipCornerRadius">5dp</item>
    </style>
</resources>
