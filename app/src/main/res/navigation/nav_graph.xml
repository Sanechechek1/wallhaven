<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewerFragment"
    tools:ignore="UnusedNavigation"
    >

    <fragment
        android:id="@+id/viewerFragment"
        android:name="com.netsoftware.wallhaven.ui.main.ViewerFragment"
        android:label="ViewerFragment"
        tools:layout="@layout/viewer_fragment">
        <action
            android:id="@+id/goViewer"
            app:destination="@id/viewerFragment"/>
        <argument
            android:name="viewerType"
            android:defaultValue="LATEST_TYPE"
            app:argType="com.netsoftware.wallhaven.ui.main.ViewerViewModel$ViewerType" />
        <argument
            android:name="searchQuery"
            app:nullable="true"
            app:argType="string"
            android:defaultValue="@null"
            />
        <argument
            android:name="drawerItemName"
            app:nullable="true"
            app:argType="string"
            android:defaultValue="@null"
            />
        <argument
            android:name="category"
            app:argType="com.netsoftware.wallhaven.ui.main.ViewerViewModel$Category"
            android:defaultValue="NONE"
            />
    </fragment>
</navigation>